#include <stdio.h>
int main(){
    int num1,num2,sum,diff,div,rem,ch,mul,i,ch2;
    i=1;
    while(i==1)
    {
        printf("\n1:Start Program\n2.Exit Program\nEnter your choice");
        scanf("%d",&ch2);
        if(ch2!=2) {
            printf("\nEnter the first number");
            scanf("%d",&num1);
            printf("\nEnter the second number");
            scanf("%d",&num2);
            sum=num1+num2;
            mul=num1*num2;
            diff=num1-num2;
            div=num1%num2;
            rem=num1%num2;
            printf("\n1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\n5.Reminder\nEnter your choice : ");
            scanf("%d",&ch);
            if(ch==1) {
                printf("Sum=%d",sum);
            }
            else if(ch==2) {
                printf("Difference=%d",diff);
            }
            else if(ch==3) {
                printf("Product=%d",mul);
            }
            else if(ch==4) {
                printf("Quotient=%d",div);
            }
            else if(ch==5) {
                printf("Remainder=%d",rem);
            }
            else {
                printf("Invalid Choice");
            }
        }
        else if (ch2==2) {
            printf("Program Ended");
            return 0;
        }
  

    }


        }


  





