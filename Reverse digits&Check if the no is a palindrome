#include <stdio.h>
int main() {
    int num,rev,num1;
    rev=0;
    printf("Enter a number : ");
    scanf("%d",&num);
    num1=num;
    while(num!=0) {
        rev=rev*10+num%10;
        num=num/10;
    }
    printf("The reversed number is : %d",rev);
    if(rev==num1) {
        printf("\nThe %d number is a palindrome ",num1);
    }
    else {
        printf("\nThe  number is not a palindrome ",num1);
    }
return 0;
}

