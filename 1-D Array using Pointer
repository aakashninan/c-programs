#include<stdio.h>
#include<stdlib.h>
int main() {
    int *a,n;
    printf("Enter the number of elements");
    scanf("%d",&n);
    a=(int*)malloc(n*sizeof(int()));
    for(int i=0;i<n;i++) {
        printf("Enter he value for a[%d]",i);
        scanf("%d",&a[i]);


    }

    for(int i=0;i<n;i++) {
        printf(" The value for a[%d]=%d\n",i,a[i]);



    }
    return 0;
}
