#include <stdio.h>
#define PI 3.14159
#define AREA_OF_CIRCLE(radius) (PI * (radius) * (radius))

int main() {
    float radius, area;
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);
    area = AREA_OF_CIRCLE(radius);
    printf("The area of the circle with radius %f is %f", radius, area);
    return 0;
}
